{
  "ts-node": {
    "files": true,
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowJs": false
    }
  },
  "compilerOptions": {
    "incremental": true,
    "target": "ESNEXT",
    "module": "ESNext",
    "lib": ["ESNEXT"],
    "noEmit": true,
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "types": ["tap", "fastify-shopify-graphql-proxy"],
  "exclude": ["node_modules"],
  "include": ["src/**/*", "test/**/*"]
}
